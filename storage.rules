// storage.rules - COMPLETE REPLACEMENT
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Car images - admin only
    match /cars/{carId}/{allPaths=**} {
      allow read: if true;
      allow write, delete: if request.auth != null && 
        firestore.get(/databases/(default)/documents/admins/$(request.auth.token.email)).data != null;
    }
    
    // No other paths allowed
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}