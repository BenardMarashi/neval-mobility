// firestore.rules - REPLACE entire file with:
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Cars: Public read for active cars, admin write
    match /cars/{carId} {
      allow read: if true; // Public can read all cars
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.token.email));
    }
    
    // Quotations: Public create, admin read/update/delete
    match /quotations/{quotationId} {
      allow create: if true; // Anyone can create quotations
      allow read, update, delete: if request.auth != null && 
        exists(/databases/$(database)/documents/admins/$(request.auth.token.email));
    }
    
    // Admins: Only readable by the admin themselves
    match /admins/{adminEmail} {
      allow read: if request.auth != null && 
        request.auth.token.email == adminEmail;
      allow write: if false;
    }
  }
}